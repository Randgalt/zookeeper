  <modelVersion>4.0.0</modelVersion>
  <groupId>org.apache.zookeeper</groupId>
  <artifactId>protobuf-extractor</artifactId>
  <packaging>pom</packaging>
  <version>1.0</version>
  <name>Apache ZooKeeper Protobuf File Extractor</name>
  <description>
    This POM is used to extract the bundled zookeeper.proto file from the ZooKeeper JAR.

    Usage: mvn -f proto.xml -Dzkversion=ZK_VERSION_TO_USE -Ddirectory=DESTINATION_DIRECTORY initialize

    "directory" is optional. If not specified the current directory is used
  </description>

  <licenses>
    <license>
      <name>Apache License, Version 2.0</name>
      <url>https://www.apache.org/licenses/LICENSE-2.0.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

    <directory>.</directory>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.apache.zookeeper</groupId>
      <artifactId>zookeeper-all</artifactId>
      <version>${zkversion}</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-remote-resources-plugin</artifactId>
        <version>1.6.0</version>
        <configuration>
          <resourceBundles>
            <resourceBundle>org.apache.zookeeper:zookeeper:${zkversion}</resourceBundle>
          </resourceBundles>
          <outputDirectory>${directory}</outputDirectory>
        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>process</goal>
            </goals>
            <phase>initialize</phase>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
